      <% if(post){%>
        <%-include('posts')%>
      <%}
      else{%>
        <div  id="DeletedPost">
          <h4>The post you are looking for,might be deleted by the owner (or) removed by admin for not adhering to guidelines.</h4>
        </div>
      <%}%>
    </div>
    <div style="margin-bottom: 100px;">
        <a href="/"><button  class="spacebtn" type="button">
            <strong>H O M E</strong>
            <div id="container-stars">
              <div id="stars"></div>
            </div>
          
            <div id="glow">
              <div class="circle"></div>
              <div class="circle"></div>
            </div>
        </button></a> 

    </div>
</div>
