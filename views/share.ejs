<% if (message != '') { %>
    <div class="flash <%= message[0].type %> fade">
        <p>
            <%= message[0].text %>
        </p>
    </div>
<% } %>

<link rel="stylesheet" href="/assets/css/share.css">

<div style="display: flex; flex-direction: column; justify-content: center; align-items: center; background-color: rgb(18,18,18); height: 100%;">
