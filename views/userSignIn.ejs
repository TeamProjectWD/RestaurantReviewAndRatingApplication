<link rel="stylesheet" href="/assets/css/signIN.css">
<link rel="stylesheet" href="/assets/css/userSignIn.css">
<% if (message != '') { %>
  <div class="flash <%= message[0].type %> fade">
      <p>
          <%= message[0].text %>
      </p>
  </div>
<% } %>

<% if(shareid){%>
  <div class="flash flash-success fade">
    <p>
        Login to view
    </p>
  </div>
<%}%>
<div class="signInBodyWrap">

      <div class="video-container">
            <video autoplay muted loop id="bg-video">
                  <source src="/uploads/Intro masakan_mukbang free no copyright _ Intro cook mukbang free no copyright (online-video-cutter.com).mp4" type="video/mp4">
            </video>
      </div>

      <div id="containerForForm">
            <div id="imgInForm">
                <img src="/uploads/signIN.jpg"
                          alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;width: 100%;
                          height: auto;
                          min-height: 100%;" />
            </div>
            <div id="originalFormContainer">
                <form action="/user/create-session" method="POST" id="originalForm">
                    <p style="margin-bottom: 50px; color: rgb(255, 115, 0); font-family: cursive;"><span class="first-letter">R</span>estaurant <span class="first-letter">R</span>eviews and <span class="first-letter">R</span>atings... </p>
                    <!-- <h3 style="letter-spacing: 1px; text-align: center; color:aliceblue; font-weight: 400; font-family: 'Times New Roman', Times, serif; font-size: 22px; margin-bottom: 50px;">Sign into your account</h3> -->
                    <div >
                        <!-- <label for="email">Email address</label> -->
                        <!-- <br> -->
                        <input type="email" name="email" placeholder="Email" required id="email"  autocapitalize="off" autocomplete="off" autocorrect="off" value="">    
                    </div>

                    <div style="position: relative;">
                        <!-- <label for="password">Password &nbsp; &nbsp;  &nbsp;  &nbsp;  &nbsp;</label> -->
                        <!-- <br> -->
                        <input type="password" name="password"  placeholder="Password"  required id="password"  autocomplete="off">
                        <i class="toggle-password fas fa-eye-slash fa-xs"></i>
                    </div>
                    <% if(shareid){%>
                        <input type="text" name="shareid" id="" value="<%=shareid%>" hidden>
                    <%}%>
                      <div id="buttonsLogin">

                        <button class="btn" type="submit" >Login</button>

                        <button  class="btn" onclick="location.href='/user/signUp'" type="button" >Sign Up</button>
                      </div>

                      <div class="container">
                        <div class="line"></div>
                        <div class="or">OR</div>
                        <div class="line"></div>
                      </div>
                      
                      <div style="margin-top: 30px;">
                        <button class="buttonG" type="button"
                        <% if(shareid){%>
                          onclick="location.href='/auth/user/google?shareid=<%=shareid%>'"
                        <%}
                        else{ %>
                          onclick="location.href='/auth/user/google'"
                        <%}%> >
