</div>

 <%if(typeOfUser == "User"){%>


    <form action="/posts/?type=<%=typeOfUser%>" method="POST" enctype="multipart/form-data" id="postForm">
            
        <input type="text" name="content" required/>
        
        <input  type="file" name="picturePath" required/>

        
        <input type="text" value="<%=typeOfUser%>"  name = "userType" hidden>
        
        <input type="number" value="0" name="upVotesCount" hidden>
        
        <select name="hotel" id="hotelSelect" required>
            
            <option disabled selected>-- Please select a Restaurant--</option>
            
            <%for (hotel of hotelNames) { %>
                
                <option value= "<%=hotel._id%>"> <%=hotel.name%> </option>
                
                <%}%>
                
            </select>
            
            <input id="fileSubmit" class="btn btn-success" type="submit" value="Submit">
        </form>
        
    <script src="/assets/js/menuSelect.js"></script>

    

 <%}else{%>

    <div>

        <form action="/posts/?type=<%=typeOfUser%>" method="POST" enctype="multipart/form-data">

