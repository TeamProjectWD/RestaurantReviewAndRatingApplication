<li>

    <div>

        <div>
           <a href="/user/profile/<%=post.user._id%>"> <span><%= post.user.name %></span> </a>
        </div>


        <div>

            <span><%= post.content%></span>

            <img src="<%= post.picturePath %>" alt="" class="img-fluid">
            
            <form action="/upVote/<%=post.id%>/?type=Post" method="post">

                <button><i class="fa-regular fa-circle-up"></i></button>
                <%= post.upVotes.length%>
            </form>

        </div>


        
        <div>

            <form  id="commentForm-<%=post.id%>" action="/posts/comment/<%=post.id%>"  method="post">

                <input type="text" name="content" id="" placeholder="comment" required>
                <input type="submit" name="submitComment">
                <label for="submitComment"><i class="fa-solid fa-paper-plane"></i></label>
                

            </form>
            

        </div>

            <small >
                <ul>
                    <% for(comment of post.comments){%>
                        <%-include('comments')%>
                    <%}%>

                </ul>
            </small>
    </div>


</li>