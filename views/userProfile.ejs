        <!-- JavaScript to show/hide the popup -->
        <script type="text/javascript">
            document.addEventListener("DOMContentLoaded", function(){
                // Get the popup background and form elements
                var popupBg = document.querySelector(".popup-background");
                var popupForm = document.querySelector(".popup-form");
                var pic = document.querySelector("#ok");
                var photo = document.querySelector("#photo");

          
    
                // Show the popup when the user clicks the button
                document.querySelector("#open-popup").addEventListener("click", function(){
                    popupBg.style.display = "block";
                    popupForm.style.display = "block";
           
                    photo.style.display ="none";
                });
    
                // Hide the popup when the user clicks outside the form or the close button
                popupBg.addEventListener("click", function(){
                    popupBg.style.display = "none";
                    popupForm.style.display = "none";
                 
                
                    photo.style.display ="block";
                });
    
                document.querySelector(".close-button").addEventListener("click", function(){
                    popupBg.style.display = "none";
                    popupForm.style.display = "none";
                  
                    photo.style.display ="block";
                });
            });
        </script>

