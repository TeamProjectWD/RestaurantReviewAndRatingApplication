        <style type="text/css">
            /* Transparent background */
            .popup-background{
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0,0,0,0.5);
                z-index: 999;
                display: none;
            }
    
            /* Center the form */
            .popup-form{
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background-color: #fff;
                padding: 20px;
                z-index: 1000;
                display: none;
            }
    
            /* Styling for form elements */
            .popup-form input[type="text"], .popup-form input[type="email"], .popup-form button{
                display: block;
                margin-bottom: 10px;
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 3px;
            }
    
            .popup-form button{
                background-color: #007bff;
                color: #fff;
                cursor: pointer;
            }
            .forms{
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 9999;
            }
        </style>
     
        <!-- Button to trigger the popup form -->
        <button id="open-popup">Edit</button>
    
